{
  "name": "bakery-cms-api",
  "version": "1.0.0",
  "private": true,
  "description": "Bakery CMS Backend - Cookie Sales Management API",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @bakery-cms/api dev",
    "build": "yarn workspace @bakery-cms/common build && yarn workspace @bakery-cms/database build && yarn workspace @bakery-cms/api build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint packages/*/src --ext .ts",
    "format": "prettier --write 'packages/*/src/**/*.ts'",
    "type-check": "tsc --noEmit -p tsconfig.base.json",
    "migrate": "cd packages/database && npx sequelize-cli db:migrate",
    "migrate:undo": "cd packages/database && npx sequelize-cli db:migrate:undo",
    "seed": "cd packages/database && npx sequelize-cli db:seed:all",
    "seed:undo": "cd packages/database && npx sequelize-cli db:seed:undo:all",
    "clean": "rm -rf packages/*/dist packages/*/*.tsbuildinfo"
  },
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0"
  },
  "resolutions": {
    "color": "4.2.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.50.0",
    "eslint-plugin-functional": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "author": "Bakery CMS Team",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^11.0.0",
    "uuid": "^13.0.0"
  }
}
