{
  "name": "@bakery-cms/common",
  "version": "1.0.0",
  "private": true,
  "description": "Bakery CMS Common - Shared types, constants, and utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
