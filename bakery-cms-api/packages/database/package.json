{
  "name": "@bakery-cms/database",
  "version": "1.0.0",
  "private": true,
  "description": "Bakery CMS Database - Sequelize models and migrations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@bakery-cms/common": "*",
    "@types/bcrypt": "^6.0.0",
    "@types/sequelize": "^6.12.0",
    "@types/uuid": "^11.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
